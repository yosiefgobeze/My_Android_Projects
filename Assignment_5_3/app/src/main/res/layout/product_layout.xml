<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:padding="20dp"
    app:cardBackgroundColor="#A03AB1"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:id="@+id/rlparentlayout"
        android:layout_width="381dp"
        android:layout_height="164dp"
        android:background="#FFFFFF"
        android:padding="12dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/ivProductImage"
            android:layout_width="84dp"
            android:layout_height="142dp"
            android:src="@drawable/labtop1"
            app:civ_border_color="#3f51b5"
            app:civ_border_width="4dp"
            tools:ignore="MissingClass" />

        <TextView
            android:id="@+id/tvProductTitle"
            android:layout_width="248dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/ivProductImage"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@+id/ivProductImage"
            android:text="RGA Voyager 7 16GB Android Tablet"
            android:textColor="#00F"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="246dp"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="37dp"
            android:layout_toEndOf="@+id/ivProductImage"
            android:text="Price: $35.00"
            android:textColor="#00F" />

        <TextView
            android:id="@+id/tvProductColor"
            android:layout_width="246dp"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/ivProductImage"
            android:text="Color: Black"
            android:textColor="#00F" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>